<div class="row col-12">
    <div class="col-2"></div>
    <div class="col-4">
        <h2 class="text-info"> Your Credits Card</h2>
        <h3 class="text-info">{{a}}</h3>
    </div>
    <div class="col-3">
        <h2 class="text-info"> Transaction History</h2>
    </div>
</div>

<div class="row">
    <div class="col-2"></div>

    <div class="col-4">
        {{#with CreditCards}}
        <form>
            <div class="form-group">
                <label for="formGroupExampleInput">User Name</label>
                <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Example input"
                    value="{{User.fullname}}" disabled>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Card Number</label>
                <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Another input" disabled
                    value="{{cardNumber}}">
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Money</label>
                <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Another input" disabled
                    value="{{money}}">
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Interest Rate</label>
                <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Another input" disabled
                    value="0.1%">
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Accrued Interest</label>
                <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Another input" disabled
                    value="Khong biet">
            </div>
        </form>
        {{/with}}
    </div>
    <div class="col-3">
        <form>
            <div class="form-group">
                <label for="dateofbirth">From Date:</label>
                <input type="date" class="form-control" id="dateofbirth" name="dateofbirth" placeholder="Example input" >
            </div>
            <div class="form-group">
                <label for="dateofbirth">To Date:</label>
                <input type="date" class="form-control" id="dateofbirth" name="dateofbirth" placeholder="Example input" >
            </div>
        </form>
        <a href="" class="btn btn-success">Statistical</a>
    </div>
</div>

