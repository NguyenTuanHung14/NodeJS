{{>header}}
 <div class="header bg-gradient-primary py-5 py-lg-5 pt-lg-8">
    <div class="container">
      <div class="header-body text-center mb-5">
        <div class="row justify-content-center">
          <div class="col-xl-3 col-lg-4 col-md-6 px-3">
            <h1 class="text-white">Đổi Ảnh Đại Diện</h1>
          </div>
        </div>
      </div>
    </div>
    <div class="separator separator-bottom separator-skew zindex-100">
      <svg x="0" y="0" viewBox="0 0 2560 100" preserveAspectRatio="none" version="1.1"
        xmlns="http://www.w3.org/2000/svg">
        <polygon class="fill-default" points="2560 0 2560 100 0 100"></polygon>
      </svg>
    </div>
  </div>
<div class="row">
    <div class="col-6">
        <h2 class="text-info"></h2>
        <h2 class="text-info">{{message}}</h2>
    </div>
</div>
<div class="row">
    <div class="col-4">
    </div>
    <div class="col-6">
        <form onSubmit="return confirm('Bạn có chắc chắn muốn cập nhật?');" method="POST" action="/users/changeavatar" enctype="multipart/form-data">
    <div class="form-group">
        <div class="file-field input-field">
            <div class="btn btn-secondary">
                <span>File</span>
                <input name="avatarPath" type="file">
            </div>
        </div>
    </div>
    <div class="form-group row-12">
        <input type="submit" value="Cập nhật" class="btn btn-primary" />
        <a href="/users" class="btn btn-primary">Trở Về</a>   
    </div>
</form>
    </div>
</div>
{{> footer }}
