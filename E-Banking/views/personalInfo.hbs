{{> header}}
<div class="main-content">
  <!-- Header -->
  <div class="header bg-gradient-primary py-7 py-lg-6 pt-lg-9">
    <div class="container">
      <div class="header-body text-center mb-4">
        <div class="row justify-content-center">
          <div class="col-xl-5 col-lg-6 col-md-8 px-5">
            <h1 class="text-white">Thông tin chi tiết</h1>
          </div>
        </div>
      </div>
    </div>
    <div class="separator separator-bottom separator-skew zindex-100">
      <svg x="0" y="0" viewBox="0 0 2560 100" preserveAspectRatio="none" version="1.1"
        xmlns="http://www.w3.org/2000/svg">
        <polygon class="fill-default" points="2560 0 2560 100 0 100"></polygon>
      </svg>
    </div>
  </div>
</div>
<h2 class="text-info">{{message}}</h2>
{{#with Account}}
<div class="row">
    <div class="col-2"></div>

    <div class="col-4">
        <div class="form-group row">
            <div class="col-4">
                <label class="control-label">Họ tên:</label>
            </div>
            <div class="col-8">

                <label class="form-control">{{User.fullname}}</label>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label class="control-label"> Email: </label>
            </div>
            <div class="col-8">
                <label class="form-control">{{User.username}}</label>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label class="control-label"> Địa chỉ: </label>
            </div>
            <div class="col-8">
                <label class="form-control">{{User.address}}</label>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label class="control-label"> Số điện thoại: </label>
            </div>
            <div class="col-8">
                <label class="form-control">{{User.phone}} </label>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label class="control-label"> Tuổi: </label>
            </div>
            <div class="col-8">
                <label class="form-control">{{User.dateofbirth}} </label>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label class="control-label"> Số CMND: </label>
            </div>
            <div class="col-8">
                <label class="form-control">{{User.identity}} </label>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label class="control-label">Giới tính: </label>
            </div>
            <div class="col-8">
                <label class="form-control">{{User.gender}} </label>
            </div>
        </div>
    </div>

    <div class="col-4">
        <div class="form-group row">
            <div class="col-4">
                <label class="control-label"> Số tài khoản: </label>
            </div>
            <div class="col-8">
                <label class="form-control">{{accountNumber}}</label>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label class="control-label"> Số dư TK: </label>
            </div>
            <div class="col-8">
                <label class="form-control">{{balance}} VND</label>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label class="control-label"> Trạng thái: </label>
            </div>
            <div class="col-8">
                {{#if status}}
                <label class="form-control">Đang kích hoạt</label>
                {{else}}
                <label class="form-control">Đã bị khóa</label>
                {{/if}}
            </div>
        </div>

        <div class="form-group">
            {{#if status}}
            <form
                onSubmit="return confirm('Khóa tài khoản người dùng?');"
                method="POST" action="/admin/users/disable/{{id}}">
            {{else}}
            <form
                onSubmit="return confirm('Mở khóa tài khoản người dùng?');"
                method="POST" action="/admin/users/enable/{{id}}">
            {{/if}}
                <hr>
                {{#if status}}
                <button class="btn btn-danger" type="submit">KHÓA TÀI KHOẢN</button>
                {{else}}
                <button class="btn btn-success" type="submit">MỞ KHÓA TÀI KHOẢN</button>
                {{/if}}
            </form>
            <hr>
        </div>
            <a href="/" class="btn btn-primary">Trở Về</a>
    </div>
</div>

{{/with}}
{{> footer }}