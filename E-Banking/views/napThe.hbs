{{>header}}
<div class="main-content">
    <!-- Header -->
    <div class="header bg-gradient-primary py-7 py-lg-8 pt-lg-9">
        <div class="container">
            <div class="header-body text-center mb-2">
                <div class="row justify-content-center">
                    <div class="col-xl-5 col-lg-6 col-md-8 px-5">
                        <h1 class="text-white">Nạp thẻ điện thoại</h1>
                        {{#if message}}
                        <h3 class="{{type}}">{{message}}</h3>
                        {{/if}}
                    </div>
                </div>
            </div>
            <div class="separator separator-bottom separator-skew zindex-100">
                <svg x="0" y="0" viewBox="0 0 2560 100" preserveAspectRatio="none" version="1.1"
                    xmlns="http://www.w3.org/2000/svg">
                    <polygon class="fill-default" points="2560 0 2560 100 0 100"></polygon>
                </svg>
            </div>
        </div>
    </div>
    <br>

    <div class="row">

    </div>

    <div class="row col-12">
        <div class="col-2">
        </div>
        <div class="col-8">
            <h2 class="text-info">Các nhà mạng hỗ trợ!</h2>
            <div class="row">
                <div class="col-4">
                    <img src="/img/home/viettel.png">
                </div>
                <div class="col-4" style="margin-top:5%">
                    <img src="/img/home/mobiphone.png">
                </div>
                <div class="col-4">
                    <img src="/img/home/vinaphone.jpg">
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="form-group col-6" >
                    <form onSubmit="return confirm('Mua thẻ nạp điện thoại?');" method="POST" action="/napThe">
                        <div class="form-inline" style="margin-bottom:10%;">
                            <label class="col-4" for="fromcard">Chọn nhà mạng:</label>
                            <select class=" col-8"  name="nhaMang">
                                <option selected value="Viettel">Viettel - Hãy nói theo cách của bạn</option>
                                <option value="MobiPhone">MobiPhone - Mọi lúc mọi nơi</option>
                                <option value="VinaPhone">VinaPhone - Không ngừng vươn xa</option>
                            </select>
                        </div>
                        <div class="form-inline">
                            <label class="col-4" for="fromcard">Chọn mệnh giá:</label>
                            <select class=" col-8" name="menhGia">
                                {{#each BangPhi}}
                                <option value="{{menhGia}}">{{menhGia}} VND chỉ còn {{chiPhi}} VND</option>
                                {{/each}}
                            </select>
                        </div>
                        <hr>
                        <button class="btn btn-success col-4" type="submit">Lấy mã thẻ</button>
                        <a style="margin-top: 5px;" href="/account" class="btn btn-primary">Quay Về Tài Khoản</a>
                    </form>
                </div>
                <table class="table table-hover table-light col-6">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Mệnh giá</th>
                            <th scope="col">Ưu đãi</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each BangPhi}}
                        <tr>
                            <td>{{menhGia}} VND</td>
                            <td>{{chiPhi}} VND</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{{> footer }}