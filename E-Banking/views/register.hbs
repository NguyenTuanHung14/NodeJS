<!-- ================ start banner area ================= -->
 {{> header }}
    <div class="wrapper">
        <form  id="wizard" method="POST" action="/users/register"> 
            <!-- SECTION 1 --> 
            <h2></h2>
            <section>
                <div class="inner" style="margin-top: -10px;">
                    <div class="image-holder">
                        <img src="/img/regis/regis-4.jpg" alt="">
                    </div>
                    <div class="form-content" >
                        <div class="form-header">
                            <h3>Đăng ký</h3>                            
                        </div>                  
                        <p>Bước 1: Vui lòng điền thông tin của bạn</p>
                        <div class="form-row">                          
                            <div class="form-holder w-100" >
                                <input type="text" placeholder="Họ và tên" class="form-control" id="fullname" name="fullname" required>
                            </div>                      
                        </div>
                        <div class="form-row">
                            <div class="form-holder">
                                <input type="text" placeholder="Email" class="form-control" id="email" name="email" required>
                            </div>
                            <div class="form-holder">
                                <input type="text" placeholder="Số điện thoại" class="form-control"  id="phone" name="phone" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-holder">
                                <input type="text" placeholder="Tuổi" class="form-control" id="age" name="age">
                            </div>
                            <div class="form-holder" style="align-self: flex-end; transform: translateY(4px);">
                                <div class="checkbox-tick">
                                    <label class="male">
                                        <input type="radio" name="gender" value="male"  checked> Nam<br>
                                        <span class="checkmark" id="checkMale"></span>
                                    </label>
                                    <label class="female">
                                        <input type="radio" name="gender" value="female" > Nữ<br>
                                        <span class="checkmark" id="checkFemale"></span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section> 

            <!-- SECTION 2 -->
            <h2></h2>
            <section>
                <div class="inner" style="margin-top: -50px;">
                    <div class="image-holder">
                        <img src="/img/regis/regis-4.jpg" alt="">
                    </div>
                    <div class="form-content">
                        <div class="form-header">
                            <h3>Đăng ký</h3>
                        </div>
                        <p>Bước 2: Vui lòng điền thông tin bổ sung</p>
                        <div class="form-row">
                            <div class="form-holder w-100">
                                <input type="text" placeholder="Địa chỉ" class="form-control"id="address" name="address" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-holder">
                                <input type="text" placeholder="Tỉnh thành" class="form-control" id="city" name="city" required>
                            </div>
                            <div class="form-holder">
                                <input type="text" placeholder="Danh tính" class="form-control" name="identity" id="identity" required>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="select">
                                <div class="form-holder">
                                    <div class="select-control" >Quốc Gia</div>
                                    <i class="zmdi zmdi-caret-down" name="country" id="country"></i>
                                </div>
                                <ul class="dropdown">
                                    <li rel="United States">United States</li>
                                    <li rel="United Kingdom">United Kingdom</li>
                                    <li rel="Viet Nam">Viet Nam</li>
                                    <li rel="India">India</li>
                                    <li rel="Brazil">Brazil</li>
                                    <li rel="Mexico">Mexico</li>
                                    <li rel="Japan">Japan</li>
                                    <li rel="Iran">Iran</li>
                                    <li rel="Germanny">Germanny</li>
                                </ul>
                            </div>
                            <div class="form-holder"></div>
                        </div>
                    </div>
                </div>
            </section> 

            <!-- SECTION 3 -->
            <h2></h2>
            <section>
                <div class="inner" style="margin-top: -100px;">
                    <div class="image-holder">
                        <img src="/img/regis/regis-4.jpg" alt="">
                    </div>
                    <div class="form-content">
                        <div class="form-header">
                            <h3>Đăng ký</h3>
                        </div>
                        <p>Bước 3: Vui lòng điền thông tin tài khoản ngân hàng</p>
                        <div class="form-row">
                            <div class="form-holder  w-100">
                                <input type="password" placeholder="Mật khẩu" class="form-control" id="password" name="password" required>
                            </div>
                        
                        </div>
                        <div class="form-row">
                            <div class="form-holder  w-100">
                                <input type="password" placeholder="Xác nhận mật khẩu" class="form-control" id="confirmPassword" name="confirmPassword" required>
                            </div>
                        </div>
                        <div class="Button">
                            <button type="submit" value="submit" class="btn" style="background-color: #384aeb; color:white">Đăng ký</button>
                        </div>
                    </div>
                </div>
            </section>
            {{#if message}}
                <div class="form-group alert {{type}}">
                    <strong>{{message}}</strong>
                </div>
            {{/if}}
        </form>
    </div> 
{{> footer }}
<!--================End Login Box Area =================-->
